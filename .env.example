# Voice AI Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# DEMO MODE (for local testing without Plivo)
# ===========================================
DEMO_MODE=true
DEMO_PHONE_NUMBER=+91-DEMO-NUMBER

# ===========================================
# PLIVO CONFIGURATION (for production)
# ===========================================
# Get these from: https://console.plivo.com/account/api/
PLIVO_AUTH_ID=your_plivo_auth_id_here
PLIVO_AUTH_TOKEN=your_plivo_auth_token_here
PLIVO_PHONE_NUMBER=+91XXXXXXXXXX

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_HOST=localhost
SERVER_PORT=8000
PUBLIC_URL=http://localhost:8000

# For production with ngrok:
# PUBLIC_URL=https://your-ngrok-url.ngrok.io

# ===========================================
# AI MODELS CONFIGURATION
# ===========================================
WHISPER_MODEL=base
LLM_MODEL=microsoft/DialoGPT-medium
TTS_VOICE=default
USE_LOCAL_MODELS=true

# OpenAI API (optional, for better responses)
OPENAI_API_KEY=your_openai_key_here
USE_OPENAI=false

# ===========================================
# AUDIO CONFIGURATION
# ===========================================
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
AUDIO_BUFFER_SIZE=1024

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/voice_ai.log
DEBUG=false

# ===========================================
# CONVERSATION SETTINGS
# ===========================================
MAX_CONVERSATION_LENGTH=20
RESPONSE_TIMEOUT=30
SILENCE_TIMEOUT=5

# ===========================================
# DEMO SETTINGS
# ===========================================
DEMO_ENABLE_TTS=true
DEMO_AUTO_RESPOND=true
DEMO_RESPONSE_DELAY=2